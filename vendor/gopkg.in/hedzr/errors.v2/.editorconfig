root = true

[*]
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = false
charset = utf-8

[*.{yml, yaml}]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md, markdown, mkd}]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = false
insert_final_newline = false

[*.{sh, bash, zsh}]
indent_size = 2
indent_style = tab
trim_trailing_whitespace = false
insert_final_newline = false

[*.go]
indent_size = 4
indent_style = tab

[*.json]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
indent_size = 4
